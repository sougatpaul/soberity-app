<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sobriety_tracker"
    android:background="#000000">


    <Button
        android:id="@+id/btn_set"
        android:layout_width="190dp"
        android:layout_height="49dp"
        android:background="?android:attr/selectableItemBackground"
        android:fontFamily="@font/roboto_dark"
        android:text="Set"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.146" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="189dp"
        android:layout_height="75dp"
        android:src="@drawable/ic_rectangle_grad"

        app:layout_constraintBottom_toBottomOf="@+id/btn_set"
        app:layout_constraintEnd_toEndOf="@+id/btn_set"
        app:layout_constraintStart_toStartOf="@+id/btn_set"
        app:layout_constraintTop_toTopOf="@+id/btn_set"
        tools:ignore="MissingConstraints,UnknownIdInLayout" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="189dp"
        android:layout_height="75dp"
        android:src="@drawable/ic_rectangle_grad"

        app:layout_constraintBottom_toBottomOf="@+id/btn_count"
        app:layout_constraintEnd_toEndOf="@+id/btn_count"
        app:layout_constraintStart_toStartOf="@+id/btn_count"
        app:layout_constraintTop_toTopOf="@+id/btn_count"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="189dp"
        android:layout_height="75dp"
        android:src="@drawable/ic_rectangle_grad"


        app:layout_constraintBottom_toBottomOf="@+id/btn_reset"
        app:layout_constraintEnd_toEndOf="@+id/btn_reset"
        app:layout_constraintStart_toStartOf="@+id/btn_reset"
        app:layout_constraintTop_toTopOf="@+id/btn_reset"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_reset"
        android:layout_width="190dp"
        android:layout_height="49dp"
        android:background="?android:attr/selectableItemBackground"
        android:text="Reset"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:backgroundTint="#3F51B5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_set"
        app:layout_constraintVertical_bias="0.201" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="243dp"
        android:layout_height="102dp"
        android:layout_marginTop="143dp"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        app:backgroundTint="#3F51B5"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_reset"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_count"
        android:layout_width="190dp"
        android:layout_height="49dp"
        android:background="?android:attr/selectableItemBackground"
        android:text="Sober day Count"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:backgroundTint="#3F51B5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.265" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="271dp"
        android:layout_height="90dp"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:textColor="@color/purple_700"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="v 0.1"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.939"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>
